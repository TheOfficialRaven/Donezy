{
  "rules": {
    "users": {
      "$uid": {
        ".read": true,
        ".write": true,
        "items": {
          "$itemId": {
            ".read": true,
            ".write": true
          }
        },
        "activity_log": {
          "$date": {
            ".read": true,
            ".write": true
          }
        },
        "badges": {
          "$badgeId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "themes": {
      ".read": true,
      ".write": "auth != null"
    },
    "quests": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "test": {
      ".read": true,
      ".write": true
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
} 